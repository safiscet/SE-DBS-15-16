// out: style.css, nib: true

/*
 * Import nib
 */
@import 'nib'
/*
 * Nib provides a CSS reset
 */
global-reset()
/*
 * Store the main color and
 * background color as variables
 */
main-color = #5c59ba
main-font-color = #333
background-color = #f2f1e5

body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Georgia'
  padding 50px 10px
  color #fff
  font-size 25px
  text-align center
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

  a
    text-decoration: none
    color: #fff

.container
  width 800px
  margin 50px auto
  overflow hidden

.main-content
  float right
  width 600px

  p
    margin-bottom 20px

.sidebar
  float left
  width 200px

  .navigation

    border-radius 3px
    border 1px solid #ccc
    margin-right 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Georgia'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

    a
      text-decoration: none
      color: main-font-color

p
  line-height 1.8

footer
  width 800px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px
