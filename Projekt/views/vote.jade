extend layout
block content
  .page-header
    h1 Stimme abgeben für die Bundestagswahl 2013 
    

  .main-results 
    .alert.alert-info
      | Sie haben 2 Stimmen. 
    .alert.alert-info
      | Mit der Erststimme können Sie einen Wahlkreisabgeordneten wählen.
    .alert.alert-info
      | Mit der Zweitstimme können Sie eine Landesliste (Partei) wählen.
    
    each value in errorTable
      .alert.alert-danger= value
      
    script.
      function submit(){
        
        var wahlkreisId = req.flash('wahlkreis')[0];
        console.log(wahlkreisId);
        alert(wahlkreisId);
        var elector = req.flash('kennung')[0];
        var erststimme = req.body.Erststimme;
        var zweitstimme = req.body.Zweitstimme;
          
        req.flash('wahlkreisID', wahlkreisId);
        req.flash('elector', elector);
        req.flash('erststimme', erststimme);
        req.flash('zweitstimme', zweitstimme);
          
        res.redirect("/submit/");
      }
    
    //label(name= "elector" hidden)= ergTable[1]
    //label(name= "wahlkreisId" hidden)= ergTable[0]
    
    form(id= "submitForm" method= "post" action= "/submit/") 
      table.table.table-striped
        thead
          tr
            th 
            th Erststimme
            th
            th
            th Zweitstimme 
            th
        tbody
          each value, index in resTable
            tr
              th
                input(type= "radio" name= "Erststimme" value= value.candidateid)
              th= value.candidate
              th= value.candidateparty
              th
                input(type= "radio" name= "Zweitstimme" value= value.partyid)
              th= value.abkuerzung 
              th= value.party
          tr
            th 
              input(type= "radio" name= "Erststimme" value= "noErststimme")
            th ungültige Stimme
            th
            th
              input(type= "radio" name= "Zweitstimme" value= "noZweitstimme")
            th ungültige Stimme
            th

      button(name= "submitButton" type="submit" value="Submit") Stimme abgeben
      
    button(type= button, onclick="window.location='/'") Zurück
  
